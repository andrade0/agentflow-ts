{
  "name": "agentflow-ts",
  "version": "0.1.0",
  "description": "Agentic workflow framework for free/local LLMs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "agentflow": "./src/cli/index.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target=node",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "bunx eslint src/",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "ai",
    "llm",
    "agent",
    "workflow",
    "ollama",
    "groq",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/agentflow-ts"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "gray-matter": "^4.0.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
